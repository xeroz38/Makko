<!--?xml version="1.0" encoding="utf-8"?-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="horizontal" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" >
 
    <TextView android:id="@+id/tvPlayerName" 
    	android:paddingLeft="10dp" android:textSize="12sp" 
	    android:layout_width="wrap_content" android:layout_height="30dp" 
	    android:gravity="center_vertical" android:layout_alignParentLeft="true"/>
    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:paddingTop="1dp" android:paddingRight="4dp"
	    android:layout_alignParentRight="true">
	    
	    <Button android:id="@+id/dlbtn" android:textSize="7pt"
	    	android:text="@string/read_now" android:background="@color/transparent"
	    	android:textColor="#FFFFFF" android:clickable="false"
	    	android:layout_width="85dp" android:layout_height="27dp" 
			android:shadowColor="#AA333333" android:shadowDx="1.3"
        	android:shadowDy="1.3" android:shadowRadius="1.3"/>
		<Button
	        android:id="@+id/delBtn"
	        android:layout_gravity="center_vertical"
	        android:layout_width="19dp"
	        android:layout_height="24dp"
	        android:background="@drawable/delete_ep"
	        android:layout_alignParentTop="true"
	        android:layout_margin="3dp" />
	</LinearLayout>
</RelativeLayout>