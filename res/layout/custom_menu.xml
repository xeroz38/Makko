<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/body_menu"
   	android:orientation="vertical"
   	android:layout_width="fill_parent"
   	android:layout_height="fill_parent"
   	android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_alignParentTop="true">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"		           
            android:layout_weight="1"
			android:gravity="center"
            android:background="@drawable/top_tab_bg">
            <ImageView 
                android:src="@drawable/makko_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@android:color/black"></LinearLayout>
		<Button
		    android:id="@+id/collection_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/comic_collection"
            android:textSize="11dip"
            android:textColor="#ffffff"
            android:background="@drawable/top_tab_bg"/>
		<LinearLayout 
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@android:color/black"></LinearLayout>
        <Button
            android:id="@+id/favorite_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/comic_favorite"
            android:textSize="11dip"
            android:textColor="#ffffff"
            android:background="@drawable/top_tab_bg"/>
    </LinearLayout>		
   	<TableLayout
   	    android:id="@+id/custom_menu_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/bg_menu"
        android:layout_marginLeft="17dp"
   		android:layout_marginRight="17dp"
        android:layout_alignParentBottom="true">
    </TableLayout>
</RelativeLayout>